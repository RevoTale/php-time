{
    "name": "bladl/time",
    "description": "Extended functionality for built-in PHP DateTimeImmutable, DateInterval and DateTimeZone classes",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "BladL"
        }
    ],
    "keywords": ["PHP Date Time"],
    "autoload": {
        "psr-4": {
            "BladL\\Time\\": "src"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm --show-info=true",
        "php-cs": "vendor/bin/php-cs-fixer fix",
        "test": [
            "@psalm",
            "@php-cs"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require-dev": {
        "friendsofphp/php-cs-fixer": ">=2.18",
        "vimeo/psalm": ">=4.6"
    },
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*"
    }
}
