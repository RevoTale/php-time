{
    "name": "grisaia/time",
    "description": "PHP built-in DateTime classes alternative. Strict types, immutability, no exceptions and latest PHP features.",
    "type": "library",
    "license": "MIT",
    "authors": [{
      "name": "l-you",
      "email": "l-you@revotale.com",
      "homepage": "https://revotale.com"
    }],
    "keywords": ["php","timestamp","date","time","week","hour"],
    "autoload": {
        "psr-4": {
            "Grisaia\\Time\\": "src"
        }
    },
    "scripts": {
        "php-cs": "vendor/bin/php-cs-fixer fix",
        "php-cs:test": "vendor/bin/php-cs-fixer fix --dry-run",
        "phpunit": "./vendor/bin/phpunit tests",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "docs":"vendor/bin/phpdoc",
        "test": [
            "@phpstan",
            "@php-cs:test",
            "@phpunit"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require-dev": {
        "friendsofphp/php-cs-fixer": ">=3.88.2",
        "phpunit/phpunit": "^12.0",
        "phpstan/phpstan": "^2.0",
        "phpdocumentor/shim": "^3.9"

    },
    "require": {
        "php": ">=8.3",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "config": {
        "allow-plugins": {
            "phpdocumentor/shim": true
        }
    }
}
