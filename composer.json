{
    "name": "bladl/time",
    "description": "PHP built-in DateTime classes alternative. Strict types, no exceptions and latest PHP 8.1 features.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "BladL"
        }
    ],
    "keywords": ["PHP Date Time"],
    "autoload": {
        "psr-4": {
            "BladL\\Time\\": "src"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm --output-format=phpstorm",
        "php-cs": "vendor/bin/php-cs-fixer fix",
        "phpunit": "./vendor/bin/phpunit tests",
        "test": [
            "@psalm",
            "@php-cs",
            "@phpunit"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require-dev": {
        "friendsofphp/php-cs-fixer": ">=2.18",
        "vimeo/psalm": ">=4.6",
        "phpunit/phpunit": "^9.5"
    },
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*"
    }
}
