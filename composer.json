{
    "name": "grisaia/time",
    "description": "PHP built-in DateTime classes alternative. Strict types, no exceptions and latest PHP 8.1 features.",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "homepage": "https://github.com/rusted-love",
        "name": "Liakhovskyi Vladyslav",
        "email": "vlad@rusted-labs.org"
    }],
    "keywords": ["PHP Date Time"],
    "autoload": {
        "psr-4": {
            "Grisaia\\Time\\": "src"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm --output-format=phpstorm --no-cache",
        "php-cs": "vendor/bin/php-cs-fixer fix",
        "phpunit": "./vendor/bin/phpunit tests",
        "phpstan": "./vendor/bin/phpstan",
        "test": [
            "@psalm",
            "@php-cs",
            "@phpunit"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require-dev": {
        "friendsofphp/php-cs-fixer": ">=2.18",
        "vimeo/psalm": ">=4.6",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8"
    },
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*"
    }
}
